<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:endpoints="using:SoundByte.Core.API.Endpoints"
    xmlns:stateTriggers="using:SoundByte.UWP.StateTriggers"
    x:Class="SoundByte.UWP.Resources.DataTemplates">

    <!-- Template for the playlist item -->
    <DataTemplate x:Key="PlaylistItem" x:DataType="endpoints:Playlist">
        <StackPanel Height="245" 
                    Width="170"
                    Margin="5"
                    Orientation="Vertical">
            <!-- On Hover, show the full playlist title -->
            <ToolTipService.ToolTip>
                <TextBlock Text="{x:Bind Title, Mode=OneWay}"/>
            </ToolTipService.ToolTip>
            
            <!-- Drop Shadow for playlist image -->
            <controls:DropShadowPanel VerticalAlignment="Top"
                                      BlurRadius="15"
                                      ShadowOpacity="0.8"
                                      OffsetX="0"
                                      OffsetY="5"
                                      IsTabStop="False"
                                      IsHitTestVisible="False"
                                      Margin="5,5,5,8"
                                      Color="Black">
                <Grid>
                    <!-- Playlist image, supports caching -->
                    <Image Source="{x:Bind Converter={StaticResource ArtworkConverter}, Mode=OneWay}"
                                      Width="160" 
                                      Height="160"
                                      VerticalAlignment="Stretch"                 
                                      HorizontalAlignment="Stretch"
                                      Stretch="UniformToFill"
                                      IsHitTestVisible="False" />
                    <!-- Playlist icon, top-left -->
                    <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Foreground="White" />
                    <!-- Length of playlist, bottom-right -->
                    <Grid RequestedTheme="Dark" Background="#66000000" Padding="5" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <TextBlock RequestedTheme="Dark" 
                                   Text="{x:Bind Duration, Mode=OneWay, Converter={StaticResource TimeStampConverter}}" 
                                   FontSize="12" 
                                   FontWeight="SemiLight" />
                    </Grid>
                </Grid>
            </controls:DropShadowPanel>
            <!-- Playlist info below image -->
            <TextBlock Text="{x:Bind Title, Mode=OneWay}" 
                       Margin="0,5,0,2" TextAlignment="Center" 
                       FontSize="15" 
                       TextWrapping="Wrap" 
                       MaxHeight="50" 
                       TextTrimming="CharacterEllipsis" />
            <TextBlock Text="{x:Bind User.Username, Mode=OneWay}" 
                       FontSize="13" 
                       Opacity="0.6" 
                       TextAlignment="Center" 
                       FontWeight="SemiBold" />
        </StackPanel>
    </DataTemplate>

    <!-- Template for the track item -->
    <DataTemplate x:Key="TrackItem" x:DataType="endpoints:Track">
        <StackPanel x:Name="StackPanel"
                    Height="245"
                    Width="170"
                    Margin="5"
                    Orientation="Vertical">
            <!-- On Hover, show the full track title -->
            <ToolTipService.ToolTip>
                <TextBlock Text="{x:Bind Title, Mode=OneWay}"/>
            </ToolTipService.ToolTip>
            <!-- Adjust style when running on Windows Phones -->
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup>
                    <VisualState>
                        <VisualState.StateTriggers>
                            <stateTriggers:DeviceStateTrigger DeviceFamily="Windows.Mobile"/>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="StackPanel.Orientation" Value="Horizontal" />
                            <Setter Target="StackPanel.Margin" Value="0" />
                            <Setter Target="TitlePanel.VerticalAlignment" Value="Center" />
                            <Setter Target="TitlePanel.Margin" Value="10,0,0,0" />
                            <Setter Target="StackPanel.Width" Value="Auto" />
                            <Setter Target="StackPanel.Height" Value="Auto" />
                            <Setter Target="ShadowPanel.Width" Value="80" />
                            <Setter Target="ShadowPanel.Height" Value="80" />
                            <Setter Target="TitleText.TextAlignment" Value="Left" />
                            <Setter Target="TitleDescription.TextAlignment" Value="Left" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <!-- Drop Shadow for track image -->
            <controls:DropShadowPanel x:Name="ShadowPanel"   
                                      VerticalAlignment="Top"
                                      BlurRadius="15"
                                      ShadowOpacity="0.8"
                                      OffsetX="0"
                                      IsTabStop="False"
                                      IsHitTestVisible="False"
                                      Margin="5,5,5,8"
                                      OffsetY="5"
                                      Color="Black">
                <Grid>
                    <Image Source="{x:Bind Converter={StaticResource ArtworkConverter}, Mode=OneWay}"  
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch"
                                      IsHitTestVisible="False"
                                      Width="160" 
                                      Height="160" 
                                      Stretch="Uniform" />
                    <!-- Track icon, top-left -->
                    <TextBlock Text="&#xE768;" 
                               FontFamily="Segoe MDL2 Assets" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               Margin="10" 
                               Foreground="White" />
                    <!-- Length of track, bottom-right -->
                    <Grid RequestedTheme="Dark" Background="#66000000" Padding="5" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <TextBlock RequestedTheme="Dark" 
                                   Text="{x:Bind Duration, Mode=OneWay, Converter={StaticResource TimeStampConverter}}" 
                                   FontSize="12" 
                                   FontWeight="SemiLight" />
                    </Grid>
                </Grid>
            </controls:DropShadowPanel>
            <!-- Playlist info below image -->
            <StackPanel Orientation="Vertical" x:Name="TitlePanel" Margin="0" VerticalAlignment="Top">
                <TextBlock x:Name="TitleText" 
                           Text="{x:Bind Title, Mode=OneWay}" 
                           Margin="0,5,0,2" 
                           TextAlignment="Center" 
                           FontSize="15" 
                           TextWrapping="Wrap" 
                           MaxHeight="50" 
                           TextTrimming="CharacterEllipsis" />
                <TextBlock x:Name="TitleDescription" 
                           Text="{x:Bind User.Username, Mode=OneWay}" 
                           FontSize="13" 
                           Opacity="0.6" 
                           TextAlignment="Center" 
                           FontWeight="SemiBold" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <!-- User Item -->
    <DataTemplate x:Key="UserItem" x:DataType="endpoints:User">
        <StackPanel Height="270"
                    Width="200"
                    Margin="5"
                    Orientation="Vertical">
            <controls:DropShadowPanel Width="190" 
                                      Height="190" 
                                      VerticalAlignment="Top"
                                      BlurRadius="15"
                                      ShadowOpacity="0.8"
                                      OffsetX="0"
                                      OffsetY="5"
                                      IsTabStop="False"
                                      IsHitTestVisible="False"
                                      Margin="5,5,5,8"
                                      Color="Black">
                <Image Source="{x:Bind Converter={StaticResource ArtworkConverter}, Mode=OneWay}"  
                                       VerticalAlignment="Stretch"
                                       HorizontalAlignment="Stretch"
                                       IsHitTestVisible="False"
                                       Width="190" 
                                       Height="190" 
                                       Stretch="Uniform" />
            </controls:DropShadowPanel>
            <TextBlock Text="{x:Bind Username, Mode=OneWay}" Margin="0,0,0,4" TextAlignment="Center" FontSize="16" TextWrapping="Wrap" MaxHeight="50" TextTrimming="CharacterEllipsis" />
            <TextBlock Text="{x:Bind Country, Mode=OneWay}" FontSize="12" Opacity="0.6" TextAlignment="Center" FontWeight="SemiBold" />
        </StackPanel>
    </DataTemplate>

    <!-- Clean hyperlinks without underline -->
    <DataTemplate x:Key="HyperlinkClean">
        <TextBlock Text="{Binding}" />
    </DataTemplate>

    <DataTemplate x:Key="AppIcon">
        <TextBlock Text="{Binding}" 
                   FontSize="38" 
                   FontFamily="Segoe MDL2 Assets" 
                   TextAlignment="Center" 
                   TextLineBounds="Tight" 
                   CharacterSpacing="1" 
                   OpticalMarginAlignment="None"  
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" />
    </DataTemplate>

    <DataTemplate x:Key="SmallAppIcon">
        <TextBlock Text="{Binding}" 
                   FontSize="22" 
                   FontFamily="Segoe MDL2 Assets" 
                   TextAlignment="Center" 
                   TextLineBounds="Tight" 
                   CharacterSpacing="1" 
                   OpticalMarginAlignment="None" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
    </DataTemplate>
</ResourceDictionary>
