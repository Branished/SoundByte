<UserControl
    x:Class="SoundByte.UWP.UserControls.CircleButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="38">

    <Button Style="{StaticResource PillButtonStyle}" 
            x:Name="MainButton"
            Height="38"
            Padding="0"
            BorderThickness="1"
            Background="{ThemeResource ShellNavigationBackground}"
            BorderBrush="Transparent"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch">
        <Button.Content>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock VerticalAlignment="Center" 
                           Foreground="{ThemeResource SystemControlBackgroundAccentBrush}"  
                           Text="{x:Bind Path=Glyph, Mode=OneWay}" 
                           Margin="15,0,5,0"
                           FontFamily="Segoe MDL2 Assets" 
                           FontSize="18" />
                
                <TextBlock Margin="5,0,18,0" 
                           VerticalAlignment="Center" 
                           Text="{x:Bind Path=Label, Mode=OneWay}" 
                           FontSize="14" 
                           Opacity="0.8"
                           FontWeight="Normal" />
            </StackPanel>
        </Button.Content> 
    </Button>
</UserControl>
